<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sell.karo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".activity.ProductDetailActivity"
            android:theme="@style/NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".activity.SearchForSingaporeChina"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.SearchForCategoryActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.MyLikesActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.ChooseImgActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.MyoffersActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.SettingActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.ChangePassActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.MyProfileActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.SignUpWithEmail"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activity.LoginSetUpActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/NoActionBar" />

        <!--Facebook-->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>


    </application>

</manifest>